{
    "name": "notion-workspace",
    "version": "20.0.2",
    "scripts": {
        "ng": "ng",
        "start": "ng serve",
        "start:hmr": "NG_HMR_TEMPLATES=1 ng serve",
        "build": "ng build",
        "build:prod": "ng build --configuration production",
        "watch": "ng build --watch --configuration development",
        "test": "ng test",
        "lint": "ng lint",
        "prepare": "husky",
        "release": "standard-version",
        "release:ci": "standard-version --no-verify --no-commit-hooks",
        "ngx:watch": "ng build --watch --configuration development ngx-notion-cms",
        "ngx:lint": "ng lint ngx-notion-cms",
        "ngx:test": "ng test ngx-notion-cms --no-watch --no-progress --browsers=ChromeHeadless",
        "ngx:build": "ng build ngx-notion-cms --configuration production",
        "ngx:tailwind": "npx tailwindcss -c projects/ngx-notion-cms/tailwind.config.js -i projects/ngx-notion-cms/src/styles.css -o dist/ngx-notion-cms/styles.css",
        "ngx:publish": "npm run ngx:lint && npm run ngx:build && npm run ngx:tailwind && npm publish dist/ngx-notion-cms/",
        "serve:ssr:ngx-notion-testbed-app": "node dist/ngx-notion-testbed-app/server/server.mjs",
        "build:prerender:ngx-notion-testbed-app": "npm run prerender && ng build ngx-notion-testbed-app",
        "prepublishOnly": "npm run lint && npm run test"
    },
    "private": true,
    "dependencies": {
        "@angular/animations": "^21.0.6",
        "@angular/common": "^21.0.6",
        "@angular/compiler": "^21.0.6",
        "@angular/core": "^21.0.6",
        "@angular/forms": "^21.0.6",
        "@angular/platform-browser": "^21.0.6",
        "@angular/platform-browser-dynamic": "^21.0.6",
        "@angular/platform-server": "^21.0.6",
        "@angular/router": "^21.0.6",
        "@angular/ssr": "^21.0.4",
        "express": "^4.18.2",
        "ngx-highlightjs": "^12.0.0",
        "ngx-notion-cms": "file:dist/ngx-notion-cms",
        "rxjs": "~7.8.0",
        "tslib": "^2.3.0",
        "zone.js": "~0.15.0"
    },
    "devDependencies": {
        "@angular/build": "^21.0.4",
        "@angular/cli": "^21.0.4",
        "@angular/compiler-cli": "^21.0.6",
        "@eslint/js": "^9.11.1",
        "@types/express": "^4.17.17",
        "@types/jasmine": "~5.1.0",
        "@types/node": "^18.18.0",
        "angular-eslint": "^21.2.0",
        "autoprefixer": "^10.4.20",
        "eslint": "^9.39.2",
        "globals": "^15.10.0",
        "husky": "^8.0.0",
        "jasmine-core": "~5.2.0",
        "karma": "~6.4.0",
        "karma-chrome-launcher": "~3.2.0",
        "karma-coverage": "~2.2.0",
        "karma-jasmine": "~5.1.0",
        "karma-jasmine-html-reporter": "~2.1.0",
        "ng-packagr": "^21.0.1",
        "postcss": "^8.4.47",
        "prettier": "^3.3.3",
        "prettier-eslint": "^16.3.0",
        "standard-version": "^9.5.0",
        "tailwindcss": "^3.4.13",
        "typescript": "~5.9.3",
        "typescript-eslint": "^8.54.0"
    }
}
